@model IEnumerable<asistenteventas.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<div class="div1">
<p>
    <a class="btn btn-outline-primary" asp-action="Busqueda">Buscar por Foto</a>
</p>
    <p>
        <a class="btn btn-outline-primary" asp-action="BuscarporTexto">Buscar Prendas  por texto</a>
    </p>
<p>
    <a class="btn btn-outline-primary" asp-action="CreateCliente">NuevoCliente</a>
</p>
<h3 class="">
    Lista Clientes
</h3>

@if(Model!= null){
    
    <table class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DirCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroDocCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MailCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FecNacCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CelCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodPais)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DirCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroDocCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MailCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FecNacCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CelCli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodPais)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.CodCli">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
   
} </div>